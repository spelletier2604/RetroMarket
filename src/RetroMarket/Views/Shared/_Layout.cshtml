<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/*.min.css" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <meta charset="utf-8">
    <title>RetroMarket</title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation" style="margin:0px">
        <a href="Home">
            <img src="~/lib/Images/Logo.png" alt="Logo" height="50" width="90">
        </a>
        <a style="color:aliceblue; margin-left:15px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a style="color:aliceblue; margin-left:15px" asp-area="" asp-controller="Home" asp-action="About">About</a>
        <a style="color:aliceblue; margin-left:15px" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
        <div class="pull-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="row">
            <div class="col-md-6">
                <p>&copy; 2017 - RetroMarket</p>
            </div>
            <div class="col-md-6 text-right">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
        </div>
    </footer>
</body>
</html>
